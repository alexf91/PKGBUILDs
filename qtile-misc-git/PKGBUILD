# Maintainer: Alexander Fasching <fasching.a91@gmail.com>

pkgname=qtile-misc-git
pkgver=7.e47ef40
pkgrel=1
pkgdesc="Additional layouts and widgets for the qtile window manager"
arch=('any')
url="https://github.com/alexf91/qtile-misc"
license=('MIT')
depends=('qtile' 'python')
makedepends=('python-setuptools' 'git')
provides=('qtile-misc')
source=('git://github.com/alexf91/qtile-misc.git')
md5sums=('SKIP')

_gitname="qtile-misc"

pkgver() {
  cd $_gitname
  echo $(git rev-list --count HEAD).$(git rev-parse --short HEAD)
}

package() {
  cd $_gitname
  # license
  msg "Copying license..."
  install -D -m 644 LICENSE $pkgdir/usr/share/licenses/$pkgname/LICENSE

  # install
  msg "Running setup.py"
  python setup.py install --root=${pkgdir} --prefix=/usr
}
