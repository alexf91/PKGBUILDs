# Maintainer : Alexander Fasching <fasching.a91@gmail.com>
# Based on vorbis-tools-svn

pkgname=vorbis-tools-git
pkgver=r919.b61076d
pkgrel=1
arch=('x86_64' 'i686')
pkgdesc="Extra tools for Ogg-Vorbis"
url="http://www.xiph.org/vorbis"
license=('GPL2')
depends=('libao>=1.0.0' 'libvorbis' 'curl>=7.16.2')
makedepends=('git')
provides=('vorbis-tools=1.4.0')
conflicts=('vorbis-tools')
source=('vorbis-tools-git::git+https://github.com/xiph/vorbis-tools.git')
sha1sums=('SKIP')

pkgver() {
  cd "$pkgname"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd "$srcdir/$pkgname"
  echo $PWD

  ./autogen.sh --prefix=/usr --without-speex --enable-vcut
  ./configure  --prefix=/usr  --without-speex --enable-vcut

  make
}

package() {
  cd "$srcdir/$pkgname"
  make DESTDIR="$pkgdir/" install
}
